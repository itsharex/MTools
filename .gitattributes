# 自动规范化行尾符
* text=auto

# Python 文件
*.py text eol=lf
*.pyx text eol=lf
*.pyi text eol=lf

# 配置文件
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.cfg text eol=lf
*.ini text eol=lf

# 文档文件
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Shell 脚本
*.sh text eol=lf
*.bash text eol=lf

# Windows 脚本
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# 二进制文件
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.icns binary
*.pyd binary
*.dll binary
*.so binary
*.dylib binary
*.exe binary
*.whl binary
*.egg binary

# Git 相关
.gitattributes text eol=lf
.gitignore text eol=lf

# 防止 Python 字节码被提交
*.pyc binary
*.pyo binary
__pycache__/ binary

# 语言统计（排除生成的文件）
*.lock linguist-generated=true
uv.lock linguist-generated=true

